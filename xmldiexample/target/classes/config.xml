<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- property tag is used to pass value in setter  -->
    <bean id="trainer1" class="com.infosys.xmldiexample.beans.Trainer">
        <property name="trainerName" value="Rohit"></property>
        <property name="trainerId" value="10" ></property>
    </bean>
    <!--constructor-arg tag is used to pass value to the constructor  -->
    <bean id="batch1" class="com.infosys.xmldiexample.beans.Batches">
          <constructor-arg name="batchId" value="1" type="int"></constructor-arg>
          <constructor-arg name="batchName" value="PDA_Spring_Batch_7"></constructor-arg>
          <constructor-arg name="batchSize" value="22" type="int"></constructor-arg>
    
    </bean>
    
     <bean id="batch2" class="com.infosys.xmldiexample.beans.Batches">
          <constructor-arg name="batchId" value="2" type="int"></constructor-arg>
          <constructor-arg name="batchName" value="PDA_Spring_Batch_6"></constructor-arg>
          <constructor-arg name="batchSize" value="22" type="int"></constructor-arg>
    
    </bean>

</beans>